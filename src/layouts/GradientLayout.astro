---
const { gradient = 'linear-gradient(135deg,#667eea,#764ba2)', title = 'TÃ­tulo', avatar, subtitle, panel = true } = Astro.props;
---
<html lang="es" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col items-center justify-center" style={`background:${gradient}`}>  
    {avatar && (
      <div class="flex flex-col items-center mb-4">
        <img src={avatar} alt="Avatar" class="w-32 h-32 rounded-full shadow-xl ring-4 ring-white/40 object-cover" />
        {subtitle && <p class="mt-3 text-white/90 text-lg font-medium drop-shadow">{subtitle}</p>}
      </div>
    )}
    <main class={`w-full max-w-md p-6 rounded-xl transition ${panel ? 'bg-white/80 shadow-xl' : 'bg-transparent shadow-none'}`}>
      <slot />
    </main>
  </body>
</html>
<style is:global>
@import '../assets/styles/tailwind.css';
</style>
