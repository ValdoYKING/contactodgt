---
import GradientLayout from '../layouts/GradientLayout.astro';
import AnimatedBallsBg from '../components/AnimatedBallsBg.astro';
import SocialIcon from '../components/SocialIcon.astro';
const avatar = '/src/assets/copia.jpg'; // Coloca tu imagen en src/assets/music-avatar.jpg
const links = [
  { label: 'WhatsApp', url: 'https://wa.me/', icon: 'whatsapp', color: 'bg-[#25D366] text-white hover:shadow-[#25D366]/50' },
  { label: 'Instagram', url: 'https://instagram.com/', icon: 'instagram', color: 'bg-gradient-to-r from-[#f58529] via-[#dd2a7b] to-[#8134af] text-white hover:shadow-pink-500/40' },
  { label: 'YouTube', url: 'https://youtube.com/', icon: 'youtube', color: 'bg-[#FF0000] text-white hover:shadow-red-500/50' },
  { label: 'Facebook', url: 'https://facebook.com/', icon: 'facebook', color: 'bg-[#1877F2] text-white hover:shadow-blue-500/50' },
  { label: 'TikTok', url: 'https://tiktok.com/', icon: 'tiktok', color: 'bg-[#010101] text-white hover:shadow-cyan-500/40' },
];
const gradient = 'linear-gradient(135deg,#43e97b 0%,#38f9d7 50%,#b983ff 100%)';
---
<GradientLayout gradient={gradient} title="Music" avatar={avatar} subtitle="Visita mis sitios ðŸ¤‘, ya luego nos vemos" panel={false}>
  <AnimatedBallsBg />
  <div class="flex flex-col gap-6 w-full max-w-xl">
    {links.map((link, i) => (
      <a href={link.url} target="_blank" rel="noopener" class={`flex items-center gap-4 px-7 py-4 rounded-2xl font-semibold shadow-lg backdrop-blur-sm hover:scale-[1.035] transition-all duration-300 group ${link.color} shadow-lg`} style={`animation-delay:${i * 80}ms`}>
        <SocialIcon name={link.icon} class="w-7 h-7" />
        <span class="tracking-wide text-[1.05rem] leading-none">{link.label}</span>
      </a>
    ))}
  </div>
</GradientLayout>
